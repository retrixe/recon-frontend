{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "target": "es2016",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "lib/",
    "pretty": true,
    "skipLibCheck": true,
    "allowJs": true,
    // Next.js starts here.
    "isolatedModules": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": false, // change someday
    "forceConsistentCasingInFileNames": true,
    "noEmit": false
  },
  "include": [
    "pages",
    "components",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
